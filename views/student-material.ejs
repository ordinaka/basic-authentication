<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/style.css" />
  <title>Student Materials | Resource Hub</title>
</head>
<body>

  <%- include('partials/navbar' ,{user: user}) %>

  <div class="dashboard-container">
    <h1>Welcome, <%= user ? user.name : 'Student' %>!</h1>
    <p class="subtitle">You are logged in as a student.</p>

    <!-- FILTER / SEARCH -->
    <div class="filter-card">
      <form id="filterForm" method="GET" action="/student/dashboard/materials" class="filter-form">
        <div class="filter-row">
          <label for="year">Year</label>
          <select name="year" id="year">
            <option value="">All Years</option>
            <option value="1">100 Level</option>
            <option value="2">200 Level</option>
            <option value="3">300 Level</option>
            <option value="4">400 Level</option>
          </select>
        </div>

        <div class="filter-row">
            <label for="course_code">Course Code</label>
            <select name="course_code" id="course_code">
                <option value="">Select Course</option>
                <% courses.forEach(c => { %>
                  <option value="<%= c.course_code %>"><%= c.course_code %> - <%= c.course_title %></option>
                <% }) %>
            </select>
        </div>
          <button type="submit" class="btn primary">Filter</button>
      </form>
    </div>

    <h2 class="section-title">Recently Uploaded</h2>

    <div class="materials-list">
      <% if (materials && materials.length > 0) { %>
        <% materials.forEach(m => { %>
          <div class="material-item">
            <div class="material-info">
              <h3><%= m.course_code %> - <%= m.course_title %></h3>
              <p class="meta">
                <span class="file"><%=m.file_path.split('/').pop() %></span>
                &nbsp;|&nbsp; Uploaded: 
                <%= new Date(m.created_at || Date.now()).toLocaleString('en-GB', {
                  year: 'numeric', month: 'short', day: 'numeric',
                  hour: 'numeric', minute: '2-digit'
                }) %> &nbsp;|&nbsp;
                <span class="file">Lecturer: <%= m.lecturer_name %></span>
              </p>
            </div>

            <div class="material-actions">
              <a class="download-btn" href="/student/dashboard/materials/download/<%= m.id %>">Download</a>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p class="no-materials">No materials found for this selection.</p>
      <% } %>
    </div>

  </div>

</body>
</html>